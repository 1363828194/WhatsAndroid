<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:minHeight="?listPreferredItemHeight"
             android:background="#ffffff">

    <FrameLayout
            android:id="@+id/action_pin"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:foreground="?selectableItemBackground"
            android:background="#fa9401">

        <ImageView
                android:id="@+id/iv_pin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="80dp"
                android:layout_gravity="right|center_vertical"
                android:src="@drawable/ic_pin"/>
    </FrameLayout>

    <FrameLayout
            android:id="@+id/action_lock"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:foreground="?selectableItemBackground"
            android:background="#c7c7ce">

        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="80dp"
                android:layout_gravity="left|center_vertical"
                android:src="@drawable/ic_lock_outline_white_24dp"/>
    </FrameLayout>


    <FrameLayout
            android:id="@+id/action_folder"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:foreground="?selectableItemBackground"
            android:background="#777bff">

        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="80dp"
                android:layout_gravity="left|center_vertical"
                android:src="@drawable/ic_folder_white_24dp"/>
    </FrameLayout>

    <FrameLayout
            android:id="@+id/action_delete"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:foreground="?selectableItemBackground"
            android:background="#f83b2f">

        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="80dp"
                android:layout_gravity="left|center_vertical"
                android:src="@drawable/ic_delete_white_24dp"/>
    </FrameLayout>

    <include
            layout="@layout/layout_pili_list_item"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
</FrameLayout>